<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="bg" alignment="CENTER" prefHeight="720.0" prefWidth="1080.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox id="paraForm" maxHeight="641.0" maxWidth="400.0" prefHeight="554.0" prefWidth="400.0" stylesheets="@../styles.css">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="241.0" styleClass="labelBlack" stylesheets="@../styles.css" text="Spielvorgaben" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox fillWidth="false" prefWidth="50.0" spacing="10.0">
               <children>
                  <RadioButton fx:id="radioButtonWeVsEnemy" mnemonicParsing="false" styleClass="labelBlackSmall" stylesheets="@../styles.css" text="Online Spiel">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="radioButtonOfflineModus" mnemonicParsing="false" styleClass="labelBlackSmall" stylesheets="@../styles.css" text="Offline gegen KI">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="radioButtonOurAI" mnemonicParsing="false" prefHeight="26.0" prefWidth="197.0" styleClass="labelBlackSmall" stylesheets="@../styles.css" text="KI spielen lassen">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </RadioButton>
                  <ComboBox fx:id="comboBox" prefHeight="26.0" prefWidth="210.0" promptText="Schwierigkeit einstellen" stylesheets="@../styles.css" />
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label styleClass="labelBlackSmall" stylesheets="@../styles.css" text="Spielfeldgröße" />
                  <TextField fx:id="textfield1" minHeight="50.0" minWidth="360.0" promptText="Spielfeldgröße eingeben" styleClass="text-field" stylesheets="@../styles.css">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Button fx:id="spielErstellen" mnemonicParsing="false" onAction="#erstelleSpiel" styleClass="buttonbg" stylesheets="@../styles.css" text="Spiel erstellen">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="buttonZurueck" mnemonicParsing="false" onAction="#zurueckZumMenue" prefHeight="32.0" prefWidth="76.0" styleClass="buttonbg" stylesheets="@../styles.css" text="Zurück">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
